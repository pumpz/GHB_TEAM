@model AppraisalSystem.Models.ManagePriceModel
@{
    ViewBag.Title = "สรุปราคา";
    ViewBag.Header = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading"><label>สรุปราคา</label></div>
<div class="panel-body">
@functions 
{
    object getHtmlAttributes(string CssClass, string istyle)
    {

        var manageType = @TempData["appraisalManageType"].ToString();
        if (manageType == "v")
        {
            return new { @class = CssClass, @readonly = "readonly", style = istyle };
        }
        return new { @class = CssClass, style = istyle };
    }
}
@using (Html.BeginForm())
{
    <div class="col-md-12">
        <div class="form-group">
            <label>หมายเลขงาน</label>
            @Html.TextBox("appraisalAssetCode", @TempData["appraisalAssetCode"], new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
            @Html.TextBox("appraisalManageType", @TempData["appraisalManageType"], new { @class = "form-control ui-wizard-content", @style = "display:none" })
        </div> 
        <div class="well">
            <div class="form-group">
                <label class="textbox-inline fieldHeader100">
                    <label>ชื่อหมู่บ้าน</label>
                </label>
                <label class="textbox-inline">
                    @Html.TextBoxFor(m => m.village, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
                <label class="textbox-inline fieldHeader100">
                    <label>ซอย</label>
                </label>
                <label class="textbox-inline">
                    @Html.TextBoxFor(m => m.alley, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
                <label class="textbox-inline fieldHeader100">
                    <label>ถนน</label>
                </label>
                <label class="textbox-inline">
                    @Html.TextBoxFor(m => m.road, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
            </div>
            <div class="form-group">
                <label class="textbox-inline fieldHeader100">
                    <label>อำเภอ</label>
                </label>
                <label class="textbox-inline ddlForHeader100">
                    @Html.TextBoxFor(m => m.amphur_name, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
                <label class="textbox-inline fieldHeader100">
                    <label>ตำบล</label>
                </label>
                <label class="textbox-inline ddlForHeader100">
                     @Html.TextBoxFor(m => m.district_name, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
                <label class="textbox-inline fieldHeader100">
                    <label>จังหวัด</label>
                </label>
                <label class="textbox-inline ddlForHeader100">
                     @Html.TextBoxFor(m => m.province_name, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
            </div>
            <div class="form-group">
                <label>รายละเอียดที่ตั้ง</label>
                 @Html.TextBoxFor(m => m.detailed_location, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label>ประเภทของทรัพย์สิน</label>
                @Html.TextBoxFor(m => m.asset_type, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label>วิธีการประเมิน</label>
                @Html.TextBoxFor(m => m.assessment_methods, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label>สิทธิการเข้าออก</label>
                @Html.TextBoxFor(m => m.rights_of_access, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label>สีตาม พรบ.ผังเมือง</label>
                @Html.TextBoxFor(m => m.paint_the_town, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="well">
             <div class="form-group">
                <label class="textbox-inline">
                    <label>&nbsp;<br/><br/>เนื้อที่(คิดเป็นตารางวา)</label>
                </label>
                <label class="textbox-inline">&nbsp;<br/>
                     @Html.TextBoxFor(m => m.building_value, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
                <label class="textbox-inline">
                    <label><br/>x&nbsp;</label>
                </label>
                <label class="textbox-inline">มูลค่าสุทธิ<br/>
                     @Html.TextBoxFor(m => m.land_value, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })
                </label>
                <label class="textbox-inline">
                    <label><br/>=&nbsp;</label>
                </label>
                <label class="textbox-inline"><br/>
                    @{
                        object result = Model.building_value*Model.land_value;
                    @Html.TextBox("txtCalResult",result, new { @class = "form-control ui-wizard-content", @readonly = "readonly" })}
                </label>
            </div>
        </div>
    </div>
}
</div>
