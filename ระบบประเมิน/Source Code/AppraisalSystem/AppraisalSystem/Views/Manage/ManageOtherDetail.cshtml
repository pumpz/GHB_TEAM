@{
    ViewBag.Title = "รายละเอียดเพิ่มเติม";
    ViewBag.Header = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel-heading"><label>รายละเอียดเพิ่มเติม</label></div>
<div class="panel-body">
@using (Html.BeginForm())
{
    <div class="col-md-8">
        <div class="form-group">
            <label>หมายเลขงาน</label>
            <input class="form-control ui-wizard-content">
        </div> 
        <div class="form-group">
            <label>ข้อมูลเทียบ 1</label>
            @Html.TextArea("txtHomeDesc","",3,3, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>ข้อมูลเทียบ 2</label>
            @Html.TextArea("txtHomeDesc","",3,3, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>ข้อมูลเทียบ 3</label>
            @Html.TextArea("txtHomeDesc","",3,3, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>สรุป</label>
            @Html.TextArea("txtHomeDesc","",3,3, new { @class = "form-control" })
        </div>
         <div class="form-group">
            <button type="submit" id="btnSubmit" class="btn btn-info ui-wizard-content ui-formwizard-button" style="float:right;margin-right:10px" value="บันทึก"><i class="fa fa-save"></i> บันทึกรูป</button>
            <button type="submit" id="btnSubmit" class="btn btn-primary ui-wizard-content ui-formwizard-button" style="float:right;margin-right:10px" value="แก้ไข" ><i class="fa fa-edit"></i> แก้ไขรูป</button>
            <button type="submit" id="btnExportPDF" class="btn btn-warning ui-wizard-content ui-formwizard-button" style="float:right;margin-right:10px" value="แก้ไข" ><i class="fa fa-print"></i> Print to PDF</button>
        </div>
    </div>
}
</div>

