@model AppraisalSystem.Models.RegisterModel

@{ 
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create a new Account</h2>


@using (Html.BeginForm("Register", "Backend", FormMethod.Post))
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <div  class="form-group">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div  class="form-group">

            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control ui-wizard-content", style = "width:400px" })

                @Html.ValidationMessageFor(m => m.UserName)
            </div>
              <div  class="form-group">
                @Html.LabelFor(m => m.Name)
            </div>
            <div  class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control ui-wizard-content", style = "width:400px" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
             <div  class="form-group">
                @Html.LabelFor(m => m.CitizenID)
            </div>
            <div  class="form-group">
                @Html.TextBoxFor(m => m.CitizenID, new { @class = "form-control ui-wizard-content", style = "width:400px" })
                @Html.ValidationMessageFor(m => m.CitizenID)
            </div>
            <div  class="form-group">
                @Html.LabelFor(m => m.Email)
            </div>
            <div  class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control ui-wizard-content", style = "width:400px" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
               <div  class="form-group">
                @Html.LabelFor(m => m.Phone)
            </div>
            <div  class="form-group">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control ui-wizard-content", style = "width:400px" })
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div  class="form-group">
                @Html.LabelFor(m => m.Password)
            </div>
            <div  class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control ui-wizard-content", style = "width:400px" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div  class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div  class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control ui-wizard-content", style = "width:400px" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
            <div  class="form-group">
                @Html.LabelFor(m => m.RoleID)
            </div>
              <div  class="form-group">
               @Html.DropDownListFor(m => m.RoleID, new SelectList(ViewData["Role"] as List<AppraisalSystem.Models.RoleModel>, "RoleID", "RoleName"), new { @class = "form-control", style = "width:400px" })
            </div>
             <div class="form-group">
                <!--input type="submit" value="บันทึก" /-->
                 <button type="submit" id="btnSubmit" class="btn btn-info ui-wizard-content ui-formwizard-button" style="float:left;margin-right:10px" value="บันทึก"><i class="fa fa-save"></i> @Resources.ConfigResource.BtnSubmit</button>
                <!--input type="button" value="กลับหน้าหลัก" onclick="location.href='@Url.Action("manage", "backend")'" /-->
            </div>
        </fieldset>
    </div>
}
